<Page x:Class="Practice.Navigate.JustWatch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice.Navigate"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JustWatch" Loaded="Page_Loaded">

    <Grid>
        <StackPanel>
            <DataGrid x:Name="DG" AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название кассеты" Binding="{Binding NameVideotapes}"/>
                    <DataGridTextColumn Header="Начало проката" Binding="{Binding DateVideoTapes.termvideotapes}"/>
                    <DataGridTextColumn Header="Общее количество" Binding="{Binding InformationTapes.QuantityTapes}"/>
                    <DataGridTextColumn Header="В Наличии" Binding="{Binding InformationTapes.QuantityAviable}"/>
                    <DataGridTextColumn Header="Жанр" Binding="{Binding InformationTapes.Genre}"/>

                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
       
    </Grid>
</Page>
