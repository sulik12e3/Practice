<Window x:Class="Practice.Resources.Usebtn.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice.Resources.Usebtn"
        mc:Ignorable="d"
        Title="Add" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"  >
            <StackPanel>
                <TextBlock Text="Название кассеты"/>
                <TextBox x:Name="txbnametape" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Конец проката"/>
                <ComboBox Name="cmbtermVD" Margin="6"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Общее количество"/>
                <TextBox  x:Name="Txbquantity"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="В Наличии"/>
                <TextBox  x:Name="txbaviableName"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Жанр"/>
                <ComboBox Margin="6"  x:Name="txbGenre"/>
            </StackPanel>
            <Button Click="savebtn_Click" Content="Cохранить" Margin="6"  Name="savebtn"/>
            
        </StackPanel>
        

    </Grid>
</Window>
